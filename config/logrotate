# Glass Budget log rotation configuration
# Place this file in /etc/logrotate.d/glass-budget

/var/log/glass-budget/*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 644 glass-budget glass-budget
    postrotate
        systemctl reload glass-budget
    endscript
}

/var/log/nginx/glass-budget-*.log {
    daily
    missingok
    rotate 30
    compress
    delaycompress
    notifempty
    create 644 www-data www-data
    postrotate
        systemctl reload nginx
    endscript
}