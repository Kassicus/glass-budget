# Glass Budget Production Configuration
# Edit this file to configure your installation

# Security - CHANGE THIS!
SECRET_KEY=your-secret-key-here

# Database Configuration
# For SQLite (default):
DATABASE_URL=sqlite:////var/lib/glass-budget/budget.db

# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://glass_budget:password@localhost:5432/glass_budget

# For MySQL/MariaDB:
# DATABASE_URL=mysql://glass_budget:password@localhost:3306/glass_budget

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=false

# Server Settings
HOST=127.0.0.1
PORT=5001

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/glass-budget/app.log

# Email Configuration (for password resets, notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=

# Backup Configuration
BACKUP_DIR=/var/lib/glass-budget/backups
BACKUP_RETENTION_DAYS=30

# Performance Settings
WEB_CONCURRENCY=4
WORKER_CLASS=sync
WORKER_CONNECTIONS=1000
MAX_WORKER_CONNECTIONS=1000

# Security Headers
FORCE_HTTPS=false
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Rate Limiting
RATELIMIT_ENABLED=true
RATELIMIT_DEFAULT=100 per hour

# File Upload Limits
MAX_CONTENT_LENGTH=16777216  # 16MB

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300